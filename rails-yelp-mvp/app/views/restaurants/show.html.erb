<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h3> Restaurant Info</h3>
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h3> Restaurant Reviews</h3>

<% @restaurant.reviews.each do |review| %>
  <p> <%= review.content %> | <%= review.rating %> </p>
<% end %>

<%= link_to "view restaurants", restaurants_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "new review", new_restaurant_review_path(@restaurant), class: "btn btn-danger" %>

    </div>
  </div>
</div>

