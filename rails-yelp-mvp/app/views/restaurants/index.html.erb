<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <h1>Restaurants#index</h1>

      <% @restaurants.each do |restaurant| %>

      <div>
        <h2> <%= restaurant.name %></h2>
        <p> <%= restaurant.address %></p>
        <p> <%= restaurant.phone_number %></>
